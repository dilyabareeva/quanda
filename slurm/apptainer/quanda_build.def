Bootstrap: localimage
From: ./quanda_pre_build.sif

%files
  # Copies over the source code
  ./quanda /opt/quanda

%post
  export PYTHONPATH="/opt/quanda/"
  export LD_LIBRARY_PATH=/opt/conda/lib

  cd /opt/quanda
  pip install .[tutorials]

%runscript
  cd /opt/quanda
  python slurm/compute_explanations.py "$@"
